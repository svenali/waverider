<?xml version="1.0" encoding="UTF8"?> 
<messages>
  <message id="settings">
    <legend>${title}</legend>
    <div class="form-horizontal">
      <div class="form-group">
        <label class="device-label col-sm-2" for="${id:device}">
          Radio Device
        </label>
        <div class="col-sm-5">
          ${device}
        </div>
      </div>
      <div class="form-group">
        ${<if-register>} 
          <label class="address-label col-sm-2" for="${id:adress}">
            IP Adress of RTL Device
          </label>
          <div class="col-sm-4">
            ${address}
          </div>  
          <label class="port-label col-sm-1" for="${id:port}">
            Port
          </label>
          <div class="col-sm-1">
            ${port}
          </div>  
        ${</if-register>}  
      </div>
      <div class="form-group">
        <label class="device-label col-sm-2" for="${id:recordpath}">
          Record Path
        </label>
        <div class="col-sm-5">
          ${recordpath}
        </div>
      </div>
      <div class="form-group">
        <label class="radiobrowser-url-label col-sm-2" for="${id:radiobrowserurl}">
          Radio Browser URL
        </label>
        <div class="col-sm-5">
          ${radiobrowserurl}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          ${submit-button}
        </div>
        <div class="col-sm-2">
          ${cancel-button}
        </div>
      </div>
    </div>
  </message>
